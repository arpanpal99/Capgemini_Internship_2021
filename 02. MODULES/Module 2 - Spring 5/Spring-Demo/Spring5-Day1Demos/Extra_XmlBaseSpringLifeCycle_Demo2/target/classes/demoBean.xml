<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

<bean id="emp" class="org.cap.pojo.Employee" autowire="constructor">
	<!-- <property name="employeeId" value="1234"/>
	<property name="firstName" value="Kamal"/>
	<property name="lastName" value="Singh"/>
	<property name="salary" value="23000"/> -->
	
	<constructor-arg name="employeeId" value="1234"/>
	<constructor-arg name="firstName" value="Kamal"/>
	<constructor-arg name="lastName" value="Singh"/>
	<constructor-arg name="salary" value="23000"/>
</bean>

<bean id="add" class="org.cap.pojo.Address">
	<property name="streetName" value="North Avvenue"/>
	<property name="city" value="Chennai"/>
</bean>

<bean id="address" class="org.cap.pojo.Address">
	<property name="streetName" value="west Car St"/>
	<property name="city" value="Chennai"/>
</bean>

</beans>
